<!-- views/blog.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h2>Blog</h2>

  <!-- Button/link to create a new post -->
  <a href="/blog/new">Create New Post</a>

  <ul>
    <% posts.forEach(post => { %>
      <li>
        <h3><%- post.title %></h3>
        <p><%- post.content %></p>
        
        <!-- Button/link to edit the current post -->
        <a href="/blog/edit/<%- post.id %>">Edit Post</a>
      </li>
    <% }); %>
  </ul>
</body>
</html>
